<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" This is an insanely long messageThis is an insanely long messageThis is an insanely long messageThis is an insanely long messageThis is an insanely long messageThis is an insanely long messageThis is an insanely long message"
        android:id="@+id/recordingName"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxLines="5"
        android:layout_toLeftOf="@+id/edit"
        android:layout_toStartOf="@+id/edit"
        android:ellipsize="end"
        android:layout_alignBottom="@+id/edit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/remove"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scrollIndicators="right" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/edit"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/remove"
        android:layout_toStartOf="@+id/remove" />
</RelativeLayout>